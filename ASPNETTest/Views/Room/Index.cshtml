@model IEnumerable<ASPNETTest.ViewModels.RoomListViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Overview</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Room.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Room.RoomNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReservationStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Room.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Room.RoomNumber)
        </td>
        <td>
            @if (item.ReservationStatus.Equals("Free"))
            {
                @Html.ActionLink("Reserve", "Reservate","Reservation",new {id = item.RoomId},null)
                
            }
            else
            {
                @Html.DisplayFor(modelItem => item.ReservationStatus)
            }
            
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Room.Id })
        </td>
    </tr>
}

</table>
